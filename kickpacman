set -v

timedatectl set-timezone Asia/Tokyo
locale -a
printf "%s\n%s\n%s\n%s\n%s" "f /etc/locale.gen" "r" "172s/^#//g" 'w!' "q" | sudo vim -e
sudo locale-gen

sudo pacman --noconfirm -S tmux zsh emacs
sudo pacman --noconfirm -S wget docker
sudo pacman --noconfirm -S gdb boost gmock
sudo pacman --noconfirm -S gauche guile

cd ~
mkdir abs
cd abs
git clone https://aur.archlinux.org/global.git
cd global
makepkg -si --noconfirm

